---
import { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  text: string;
}

const { text, href, ...props } = Astro.props;
const isActive = href === Astro.url.pathname;
---

<a
  class:list={[{ active: isActive }]}
  href={href}
  {...props}
  aria-label={`Go to ${text}`}
>
  {text}
</a>
